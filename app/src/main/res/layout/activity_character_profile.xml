<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/character_photo_default"
    tools:context="com.example.jake.dnd.CharacterProfileActivity">
    
    <Button
        android:id="@+id/character_sheet_button"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="129dp"
        android:background="@drawable/character_button"
        android:text="@string/character_sheet_label"/>

    <Button
        android:id="@+id/ability_sheet_button"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="129dp"
        android:background="@drawable/character_button"
        android:text="@string/ability_sheet_label"/>

    <Button
        android:id="@+id/encounter_sheet_button"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="239dp"
        android:background="@drawable/character_button"
        android:text="@string/encounter_sheet_label"/>

</RelativeLayout>
